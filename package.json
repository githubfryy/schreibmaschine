{
  "name": "schreibmaschine",
  "version": "0.1.0",
  "description": "Collaborative writing app for creative writing workshops - local-first with offline support",
  "type": "module",
  "engines": {
    "bun": ">=1.2.19"
  },
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun --format esm",
    "start": "bun run dist/index.js",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:templates": "node test-templates.js",
    "test:static": "bun run type-check && bun run lint && bun run test:templates",
    "db:migrate": "bun run src/database/migrate.ts",
    "db:seed": "bun run src/database/seed.ts",
    "download-alpinejs": "bun run scripts/download-alpinejs.js"
  },
  "dependencies": {
    "@elysiajs/html": "^1.3.0",
    "@elysiajs/static": "^1.3.0",
    "elysia": "^1.3.8",
    "loro-crdt": "1.5.9",
    "ventojs": "^1.15.2",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@types/bun": "latest",
    "typescript": "^5.9.2"
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "@elysiajs/html",
    "@elysiajs/static",
    "elysia",
    "esbuild"
  ]
}
